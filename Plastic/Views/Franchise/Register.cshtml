@using Plastic.ViewModels
@model RegisterFranchiseViewModel

@{
    Layout = null;
}

<html lang="en" itemscope="" itemtype="http://schema.org/WebPage" class="">
@await Html.PartialAsync("_Head")
<body class="sign-in-basic">
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NKDMSK6" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    @await Html.PartialAsync("_Navbar")


    <div class="page-header align-items-start min-vh-100" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&amp;ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&amp;auto=format&amp;fit=crop&amp;w=1950&amp;q=80');" loading="lazy">
        <span class="mask bg-gradient-dark opacity-6"></span>


        <div class="container my-auto">
            <div class="row">
                <div class="col-lg-4 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 fadeIn3 fadeInBottom">

                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                            <div class="bg-gradient-primary shadow-primary border-radius-lg py-3 pe-1">
                                <h4 class="text-white font-weight-bolder text-center mt-2 mb-0">Klinik Kaydol</h4>
                                <div class="row mt-3">
                                    <div class="col-2 text-center ms-auto">
                                        <a class="btn btn-link px-3" href="javascript:;">
                                            <i class="fa fa-facebook text-white text-lg" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                    <div class="col-2 text-center px-1">
                                        <a class="btn btn-link px-3" href="javascript:;">
                                            <i class="fa fa-github text-white text-lg" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                    <div class="col-2 text-center me-auto">
                                        <a class="btn btn-link px-3" href="javascript:;">
                                            <i class="fa fa-google text-white text-lg" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card-body">
                            <form asp-action="Register" role="form" class="text-start">

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Klinik Adı</label>
                                    <select id="clinic" name="ClinicId" class="form-control text-muted">
                                        @foreach (var clinic in ViewBag.Clinics)
                                        {
                                            <option value="@clinic.Value">@clinic.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="ClinicId" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">İsim</label>
                                    <input asp-for="Franchise.Title" type="text" class="form-control">
                                    <span asp-validation-for="Franchise.Title" class="text-danger"></span>
                                </div>
                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Açıklma</label>
                                    <input asp-for="Franchise.Description" type="text" class="form-control">
                                    <span asp-validation-for="Franchise.Description" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Sertifikasyon numarası</label>
                                    <input asp-for="Franchise.CertificationNumber" type="text" class="form-control">
                                    <span asp-validation-for="Franchise.CertificationNumber" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Şehir</label>
                                    <select id="cityS" name="cityS" class="form-control text-muted">
                                        @foreach (var city in ViewBag.Cities)
                                        {
                                            <option value="@city.Value">@city.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Franchise.District.City" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Bölge</label>
                                    <select id="district" name="DistrictId" class="form-control text-muted">
                                        @foreach (var district in ViewBag.Districts)
                                        {
                                            <option value="@district.Value">@district.Text</option>
                                        }
                                    </select>
                                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Adres</label>
                                    <input asp-for="Franchise.Adress" type="text" class="form-control">
                                    <span asp-validation-for="Franchise.Adress" class="text-danger"></span>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Telefon</label>
                                    <input asp-for="Franchise.Phone" type="number" class="form-control">
                                    <span asp-validation-for="Franchise.Phone" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Email</label>
                                    <input asp-for="EmailAddress" type="email" class="form-control">
                                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline mb-3">
                                    <label class="form-label">Şifre</label>
                                    <input asp-for="Password" type="password" class="form-control">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="input-group input-group-outline my-3">
                                    <label class="form-label">Şifre tekrar</label>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>


                                <div class="text-center">
                                    <button type="submit" class="btn bg-gradient-primary w-100 my-4 mb-2">Kaydol</button>
                                </div>
                                <p class="mt-4 text-sm text-center">
                                    Hesabın var mı? <a href="@Url.Action("Login", "Franchise")" class="text-blue-500 hover:underline">Giriş Yap</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>




        <footer class="footer position-absolute bottom-2 py-2 w-100">
            <div class="container">
                <div class="row align-items-center justify-content-lg-between">
                    <div class="col-12 col-md-6 my-auto">
                        <div class="copyright text-center text-sm text-white text-lg-start">
                            © <script>
                                  document.write(new Date().getFullYear())
                            </script>2024,
                            made with <i class="fa fa-heart" aria-hidden="true"></i> by
                            <a href="https://www.creative-tim.com" class="font-weight-bold text-white" target="_blank">Creative Tim</a>
                            for a better web.
                        </div>
                    </div>
                    <div class="col-12 col-md-6">
                        <ul class="nav nav-footer justify-content-center justify-content-lg-end">
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com" class="nav-link text-white" target="_blank">Creative Tim</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com/presentation" class="nav-link text-white" target="_blank">About Us</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com/blog" class="nav-link text-white" target="_blank">Blog</a>
                            </li>
                            <li class="nav-item">
                                <a href="https://www.creative-tim.com/license" class="nav-link pe-0 text-white" target="_blank">License</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    @await Html.PartialAsync("_Script")



    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>

        $(document).ready(function () {
            $('#cityS').change(function () {
                var cityId = $(this).val();
                var districtSelect = $('#district');

                if (cityId) {
                    $.ajax({
                        url: '@Url.Action("GetDistrictsByCity", "Franchise")', // Doğru controller adını kullandığınızdan emin olun
                        type: 'GET',
                        data: { cityId: cityId },
                        success: function (data) {
                            districtSelect.empty(); // Önceki seçenekleri temizle
                            districtSelect.append('<option value="">Seçiniz</option>'); // İlk seçenek ekle
                            $.each(data, function (index, district) {
                                districtSelect.append('<option value="' + district.Value + '">' + district.Text + '</option>');
                            });
                            districtSelect.prop('disabled', false); // Bölge seçim alanını etkinleştir
                        },
                        error: function (xhr, status, error) {
                            console.error("Hata:", xhr.responseText);
                            alert('Bölgeler alınırken bir hata oluştu.');
                        }
                    });
                } else {
                    districtSelect.empty().append('<option value="">Seçiniz</option>').prop('disabled', true); // Seçim yoksa alanı devre dışı bırak
                }
            });
        });
    </script>

</body>
</html>
