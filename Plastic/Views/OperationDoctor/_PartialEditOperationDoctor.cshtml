@using Plastic.ViewModels
@model OperationDoctorViewModel

<div class="container py-7">
    <div class="row mt-5">
        <div class="col-sm-3 col-6 mx-auto">
            <div class="modal fade" id="editOperationDoctorModal" tabindex="-1" aria-labelledby="editOperationDoctorModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="editOperationDoctorModalLabel">Operasyon Düzenle</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <section>
                                <div class="container py-4">
                                    <div class="row">
                                        <div class="col-lg-7 mx-auto d-flex justify-content-center flex-column">

                                            <form asp-area="" asp-controller="OperationDoctor" asp-action="Edit" method="post" enctype="multipart/form-data" id="editDoctorModalForm" role="form" autocomplete="off">
                                                <input type="hidden" asp-for="OperationDoctor.Id" />
                                                <input type="hidden" name="ClinicId" asp-for="ClinicId" value="@Model.ClinicId" />
                                                <input type="hidden" name="FranchiseId" asp-for="FranchiseId" value="@Model.FranchiseId" />
                                                <div class="card-body">
                                                    <div class="row">

                                                        <div class="col-md-6 ps-2">
                                                            <div class="input-group input-group-dynamic">

                                                                @*                                                                 <select asp-for="OperationDoctor" asp-items="@Html.GetEnumSelectList<Operation>()" class="form-control">
                                                                <option selected="selected" value="">--Select--</option>
                                                                </select>
                                                                <span asp-validation-for="OperationDoctor" class="text-danger"></span>
                                                                *@

                                                                <select asp-for="DoctorIds" asp-items="@(new SelectList(Model.Doctors, "Id", "FirstName", Model.DoctorIds))" class="form-control">
                                                                    <option value="">Doktor</option>
                                                                </select>@*  class="selectpicker form-control" *@
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6 ps-2">
                                                            <div class="input-group input-group-dynamic">
                                                                <select asp-for="OperationIds" asp-items="@(new SelectList(Model.Operations, "Id", "Title", Model.OperationIds))" class="form-control">
                                                                    <option value="">İşlem</option>
                                                                </select>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6 ps-2">
                                                            <div class="input-group input-group-dynamic">
                                                                <input type="number" placeholder="Ücret" class="form-control border-start-0" step="0.01" min="0" asp-for="OperationDoctor.DoctorPrice">
                                                                <span asp-validation-for="OperationDoctor.DoctorPrice" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6 ps-2">
                                                            <div class="input-group input-group-dynamic">
                                                                <input asp-for="Image1" type="file" multiple class="form-control border-start-0">
                                                                <span asp-validation-for="Image1" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6 ps-2">
                                                            <div class="input-group input-group-dynamic">
                                                                <input asp-for="Image2" type="file" multiple class="form-control border-start-0">
                                                                <span asp-validation-for="Image2" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-6 ps-2">
                                                            <div class="input-group input-group-dynamic">
                                                                <input asp-for="Image3" type="file" multiple class="form-control border-start-0">
                                                                <span asp-validation-for="Image3" class="text-danger"></span>
                                                            </div>
                                                        </div>

                                                    </div>


                                                    <div class="modal-footer justify-content-between">
                                                        @* <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                                                        <button type="submit" form="editDoctorModalForm" class="btn btn-primary">Kaydet</button> *@
                                                        <button type="button" class="btn bg-gradient-dark mb-0" data-bs-dismiss="modal">Kapat</button>
                                                        <button type="submit" id="editOperationDoctorModalBtn" class="btn bg-gradient-primary mb-0">Kaydet</button>
                                                    </div>

                                            </form>
                                        </div>
                                    </div>
                                </div>

                            </section>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.18/dist/js/bootstrap-select.min.js"></script>
@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="text/javascript">
        // modal pop up da doctor  formunun butonunu başka yerde kullanmayı sağlar
        $(document).ready(function () {
            $("#editOperationDoctorModalBtn").click(function (e) {
                e.preventDefault();
                $("#editOperationDoctorModalForm").submit();
            });
        });

    </script>
}
