                                                                        @foreach (var operation in ViewData["Operations"] as List<Operation>)
                                                                        {
                                                                            <option value="@operation.Id">
                                                                                @operation.Title
                                                                            </option>
                                                                        }
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6 ps-2">
                                                                <div class="input-group input-group-dynamic">
                                                                    <input type="text" placeholder="Ücret" class="form-control border-start-0" asp-for="OperationDoctor.DoctorPrice">
                                                                    <span asp-validation-for="OperationDoctor.DoctorPrice" class="text-danger"></span>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6 ps-2">
                                                                <div class="input-group input-group-dynamic">
                                                                    <input asp-for="@Model.Image1" type="file" multiple class="form-control border-start-0">
                                                                    <span asp-validation-for="@Model.Image1" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6 ps-2">
                                                                <div class="input-group input-group-dynamic">
                                                                    <input asp-for="@Model.Image2" type="file" multiple class="form-control border-start-0">
                                                                    <span asp-validation-for="@Model.Image2" class="text-danger"></span>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6 ps-2">
                                                                <div class="input-group input-group-dynamic">
                                                                    <input asp-for="@Model.Image3" type="file" multiple class="form-control border-start-0">
                                                                    <span asp-validation-for="@Model.Image3" class="text-danger"></span>
                                                                </div>
                                                            </div>

                                                        </div>
                                                </form>


                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="modal-footer justify-content-between">
                                <button type="button" class="btn bg-gradient-dark mb-0" data-bs-dismiss="modal">Kapat</button>
                                <button type="submit" id="createOperationDoctorModalBtn" name="action" value="operationdoctorCreateSubmit" class="btn bg-gradient-primary mb-0">Ekle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


