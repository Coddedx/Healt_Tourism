                                                            <div class="col-md-6 ps-2">
                                                                <div class="input-group input-group-dynamic">
                                                                    <label for="doctorSelect">Doktor:  </label>
                                                                    <select name="SelectedDoctorId" id="doctorSelect" class="form-control">
                                                                        @*  asp-for="Doctor" *@
                                                                        <option value=""></option>
                                                                        @foreach (var doctor in ViewData["Doctors"] as List<Doctor>)
                                                                        {
                                                                            <option value="@doctor.Id">
                                                                                @doctor.FirstName @doctor.LastName
                                                                            </option>
                                                                        }
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <div class="col-md-6 ps-2">
