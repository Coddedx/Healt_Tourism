<!-- -------- Clinic Detail --------->
@using Plastic.ViewModels
@model ClinicViewModel

<header>

    <!-- Clinic Detay verileri-->
    <div id="clinic-details" data-clinic-id="@Model.Clinic.Id" class="page-header min-vh-75" style="background-image: url(https://images.unsplash.com/photo-1501446529957-6226bd447c46?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=2378&q=80)" loading="lazy">
        <span class="mask bg-gradient-dark opacity-4"></span>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-white text-center">
                    @if (Model.Clinic != null)
                    {
                        <h1 class="text-white"> @Model.Clinic.Name (@Model.Clinic.District.Name- @Model.Clinic.District.City.Name)</h1>
                        <h2 class="text-white">@Model.Clinic.Adress</h2>
                        <p class="lead"> @Model.Clinic.Email</p>
                        <p class="lead">@Model.Clinic.Phone</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Doktor-Operasyon Create Dropdowns  -->
    @if (User.IsInRole("clinic")) //  && ViewBag.UserId == Model.Clinic.Id
    {
        <div class="container py-3">
            @*             <div class="row">*@
            <div class="col-lg-4 ms-lg-auto col-md-6 col-sm-3 d-flex justify-content-center">
                <div class="dropdown">
                    <button class="btn bg-gradient-primary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Ekle
                    </button>
                    <ul class="dropdown-menu px-2 py-3" aria-labelledby="dropdownMenuButton">
                        @*                     <li><a class="dropdown-item border-radius-md" data-url="@Url.Action("Create", "Doctor")" id="doctorCreateLink">Doktor</a></li> @* data-bs-toggle="modal" data-bs-target="#createDoctorModal" *@
                        <li>
                            <a class="dropdown-item border-radius-md"
                               data-url="@Url.Action("Create", "OperationDoctor")"
                               data-clinic-id="@Model.Clinic.Id"
                               id="createOperationDoctorLink">Operasyon</a>
                        </li>
                        <li>
                            <a class="dropdown-item border-radius-md"
                               data-url="@Url.Action("Create", "Doctor")"
                               data-clinic-id="@Model.Clinic.Id"
                               id="CreateDoctorLink">Doktor</a>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        @* </div> *@
    }

    <!--Navigation Tabs-->
    <section class="py-7" style="margin-top:-85px ">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 mx-auto">
                    <div class="nav-wrapper position-relative end-0">
                        <ul id="nav-tabs" class="nav nav-pills nav-fill p-1" role="tablist">
                            @* <li class="nav-tab" data-url="@Url.Action("Operation", "Franchise")">Operation Tab</li>      id="OperationTab" class="nav-link mb-0 px-0 py-1 active"*@
                            <li class="nav-item">
                                <a href="#" data-url="@Url.Action("OperationDoctor", "OperationDoctor")" class="nav-tab" role="tab" />
                                İşlemlerimiz
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" data-url="@Url.Action("Doctor", "Doctor")" class="nav-tab" role="tab" />
                                Doktorlarımız
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" data-url="@Url.Action("CommentFranchise", "Clinic")" class="nav-tab" role="tab" />
                                Yorumlarımız
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" data-url="@Url.Action("OtherFranchise", "Clinic")" class="nav-tab" role="tab" />
                                Kliniklerimiz
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div id="content-area">
                        @*  <div id="form-area" ></div> *@
                        @* @Html.Partial("~/Views/Doctor/_PartialEditDoctor.cshtml", new _PartialDoctorViewModel { }) *@
                        @*  @Html.Partial("~/Views/OperationDoctor/_PartialEditOperationDoctor.cshtml", new OperationDoctorViewModel { }) *@
                    </div>

                </div>
            </div>
        </div>
    </section>

    @section Scripts {
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {

                // nav tab da hangisine basıldıysa doğru partial view ın content-area bölgesine gelmesini sağlar
                $(".nav-tab").click(function (e) {
                    e.preventDefault();
                    var url = $(this).data("url");
                    var clinicId = $('#clinic-details').data('clinic-id'); //<div id="clinic-details" data-clinic-id="Model.Clinic.Id" den alıyor

                    url += '?clinicId=' + clinicId;

                    console.log("Clinic ID:", clinicId);
                    console.log("Final URL:", url);

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            $("#content-area").html(data);
                        }
                    });
                });

                //edit doctor modal pop up ı böylece aynı sayfada kalarak açılır
                $(document).on('click', '.btn-edit-doctor', function (e) {
                    e.preventDefault();
                    var url = $(this).attr('href');
                    var clinicId = $('#clinic-details').data('clinic-id');

                    url += '?clinicId=' + clinicId;

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            $("#content-area").html(data);
                            $("#editDoctorModal").modal('show');
                        }
                    });
                });

                //edit operationDoctor modal pop up ı  aynı sayfada kalarak açılır
                $(document).on('click', '.btn-edit-operationDoctor', function (e) {
                    e.preventDefault();
                    var url = $(this).attr('href');
                    var clinicId = $('#clinic-details').data('clinic-id');

                    url += '?clinicId=' + clinicId;

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            $("#content-area").html(data);
                            $("#editOperationDoctorModal").modal('show');
                        }
                    });
                });

                //create operationDoctor modal pop up ı  aynı sayfada kalarak açılır
                $(document).on('click', '#createOperationDoctorLink', function (e) {
                    e.preventDefault();
                    var url = $(this).data('url');
                    var clinicId = $(this).data('clinic-id');

                    // URL'e ClinicId'yi query string olarak ekliyoruz
                    url += '?clinicId=' + clinicId;

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            $("#content-area").html(data);
                            $("#createOperationDoctorModal").modal('show');  // Modal'ı göster
                        }
                    });
                });

                //create Doctor modal pop up ı  aynı sayfada kalarak açılır  attrhref
                $(document).on('click', '#CreateDoctorLink', function (e) {
                    e.preventDefault();
                    var url = $(this).data('url');
                    var clinicId = $(this).data('clinic-id');

                    // URL'e ClinicId'yi query string olarak ekliyoruz
                    url += '?clinicId=' + clinicId;

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            $("#content-area").html(data);
                            $("#createDoctorModal").modal('show');  // Modal'ı göster
                        }
                    });
                });

                //delete OperationDoctor modal pop up ı  aynı sayfada kalarak açılır
                $(document).on('click', '.btn-delete-operationDoctor', function (e) {
                    e.preventDefault();
                    var url = $(this).attr('href');
                    var clinicId = $('#clinic-details').data('clinic-id'); //<div id="clinic-details" data-clinic-id="Model.Clinic.Id" den alıyor

                    url += '?clinicId=' + clinicId;

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            $("#content-area").html(data);
                            $("#deleteOperationDoctorModal").modal('show');  // Modal'ı göster
                        }
                    });
                });

                //delete Doctor modal pop up ı  aynı sayfada kalarak açılır
                $(document).on('click', '.btn-delete-Doctor', function (e) {
                    e.preventDefault();
                    var url = $(this).attr('href');
                    var clinicId = $('#clinic-details').data('clinic-id');

                    url += '?clinicId=' + clinicId;

                    $.ajax({
                        url: url,
                        type: 'GET',
                        success: function (data) {
                            $("#content-area").html(data);
                            $("#deleteDoctorModal").modal('show');  // Modal'ı göster
                        }
                    });
                });

            });
        </script>
    }


</header>
